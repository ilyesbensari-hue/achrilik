"use client";

import Link from 'next/link';
import Image from 'next/image';
import { useEffect, useState } from 'react';
import CategoryList from './CategoryList';
import VisualSearch from './VisualSearch';

interface User {
    id: string;
    email: string;
    name: string;
    role: 'BUYER' | 'SELLER';
}

