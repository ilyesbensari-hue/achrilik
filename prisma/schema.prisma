generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      String?
  role      String     @default("BUYER") // BUYER, SELLER, ADMIN
  store     Store?
  orders    Order[]
  address   String?
  phone     String?
  createdAt DateTime   @default(now())
  reviews   Review[]
  wishlist  Wishlist[]
  adminLogs AdminLog[]
}

model Store {
  id           String    @id @default(cuid())
  name         String
  description  String?
  ownerId      String    @unique
  owner        User      @relation(fields: [ownerId], references: [id])
  products     Product[]
  latitude     Float?    // For geolocation
  longitude    Float?
  address      String?
  city         String?
  phone        String?   // Contact phone number
  hours        String?   // Opening hours (JSON format)
  clickCollect Boolean   @default(true) // Click & Collect available
  verified     Boolean   @default(false) // Vendeur certifié ✓
  verifiedAt   DateTime? // Date de certification
  verifiedBy   String?   // Admin ID qui a vérifié
  createdAt    DateTime  @default(now())
}

model Category {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  parentId  String?
  parent    Category? @relation("CategoryToCategory", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryToCategory")
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id              String     @id @default(cuid())
  title           String
  description     String
  price           Int
  images          String
  categoryId      String?
  category        Category?  @relation(fields: [categoryId], references: [id])
  storeId         String
  store           Store      @relation(fields: [storeId], references: [id])
  variants        Variant[]
  status          String     @default("PENDING") // PENDING, APPROVED, REJECTED
  rejectionReason String?
  
  // New Attributes
  material        String?    // e.g., "Coton", "Polyester", "Cuir"
  fit             String?    // e.g., "Slim", "Regular", "Oversize" (for clothes)
  dimensions      String?    // e.g., "10x20x5 cm" (for objects/accessories)
  warranty        String?    // e.g., "12 mois", "Garantie constructeur"
  technicalSpecs  String?    // JSON or long text for electronics specific specs

  // Promotions
  discountPrice   Float?     // If set, this is the active promo price
  promotionLabel  String?    // e.g., "Solde", "Promo d'été"

  createdAt       DateTime   @default(now())
  reviews         Review[]
  wishlists       Wishlist[]
  adminLogs       AdminLog[]
  
  @@index([storeId])
  @@index([categoryId])
  @@index([createdAt])
  @@index([status])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  images    String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
  
  @@index([productId])
  @@index([userId])
}

model Variant {
  id        String      @id @default(cuid())
  productId String
  product   Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  size      String
  color     String
  stock     Int
  orderItems OrderItem[]
  
  @@index([productId])
}

model Order {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  status        String      @default("PENDING") // PENDING, CONFIRMED, READY, DELIVERED, CANCELLED
  total         Float
  paymentMethod String      // CASH_ON_DELIVERY, STORE_PAYMENT, ONLINE
  deliveryType  String      // DELIVERY, CLICK_COLLECT
  items         OrderItem[]
  createdAt     DateTime    @default(now())
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  variantId String
  variant   Variant @relation(fields: [variantId], references: [id])
  quantity  Int
  price     Float
  
  @@index([orderId])
  @@index([variantId])
}

model Wishlist {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, productId])
  @@index([userId])
  @@index([productId])
}

model AdminLog {
  id         String   @id @default(cuid())
  adminId    String
  admin      User     @relation(fields: [adminId], references: [id])
  action     String   // APPROVE_PRODUCT, REJECT_PRODUCT, DELETE_USER, UPDATE_SETTINGS, etc.
  targetType String   // PRODUCT, USER, ORDER, SETTINGS, etc.
  targetId   String?  // ID of the affected entity
  productId  String?
  product    Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  details    String?  // JSON string with additional details
  createdAt  DateTime @default(now())
  
  @@index([adminId])
  @@index([action])
  @@index([createdAt])
  @@index([targetType])
}

model SystemSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String   // JSON string for complex values
  description String?
  category    String   @default("GENERAL") // GENERAL, EMAIL, PAYMENT, SHIPPING
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  
  @@index([category])
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   @unique // welcome, order_confirmation, product_approved, etc.
  subject     String
  htmlContent String   @db.Text
  variables   String?  // JSON array of available variables
  enabled     Boolean  @default(true)
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
